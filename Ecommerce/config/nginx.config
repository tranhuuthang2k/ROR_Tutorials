upstream app {
  # Path to Puma SOCK file, as defined previously
  server unix:/home/ubuntu/apps/shop_katsu/shared/tmp/sockets/shop_katsu_puma.sock;
}

server {
  listen 80;
  server_name localhost;

  root /home/ubuntu/apps/shop_katsu/current/public;
  access_log /home/ubuntu/apps/shop_katsu/current/log/nginx.access.log;
  error_log /home/ubuntu/apps/shop_katsu/current/log/nginx.error.log info;

  try_files $uri/index.html $uri @app;

  location / {
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $host;
    proxy_redirect off;
    proxy_http_version 1.1;
    proxy_set_header Connection '';
    proxy_pass http://app;
  }

  location ~ ^/(assets|fonts|system)/|favicon.ico|robots.txt {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}